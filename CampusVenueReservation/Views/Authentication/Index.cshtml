<script>

    function RedirecttoLogin() {
        window.location.href = "../Authentication/Login";
    }
    function RedirecttoHome() {
        window.location.href = "../Authentication/LandingPage";
    }

    $(document).keypress(function (e) {

        if (e.keyCode === 13 && $("#buttonLogin").is(":visible")) {
            login();
        }

    })

    function Signup() {
        debugger
        var username = $("#Username").val();
        var Email = $("#Email").val();
        var Cpassword = $("#Cpassword").val();
        var password = $("#password").val();
        var Phone = $("#Phone").val();
        var UserType = $("#UserType").val();

        $.ajax({
            url: '/Authentication/CreateUser',
            type: "POST",
            dataType: "JSON",
            data: { UserName: username, Password: password, Email: Email, Cpassword: Cpassword, Phone: Phone, UserType: UserType },
            success: function (response) {
                if (response.Status) {
                    alert(response.msg);
                    //swal(response.msg);
                    location.reload();
                }
                else {
                    console.log(response.msg);
                    swal(response.ResponseText);
                    //alert(response.ResponseText);
                }
            }
        });
    }
</script>